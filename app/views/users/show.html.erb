<%= render partial: "posts/head" %>

<div class="contents">
  <div class="username">
    <%= @user.nickname %>
  </div>
  <div class="history">
    <div class="history-top">
      プロフィール
    </div>
    <div class="history-books">
      <%= @user.profile %>
    </div>
  </div>
  <div class="postTitle">投稿一覧
  </div>
  <% @posts.each do |post| %>
    <%= render partial: "posts/post", locals: { post: post } %>
  <% end %>
  <div class="new-post">
    <% if user_signed_in? %>
      <%= link_to new_post_path, class: "new-post__btn" do%>
        <i class="fas fa-edit"></i>
      <%end%>
    <% else %>
      <%= link_to new_user_session_path, class: "new-post__btn" do%>
        <i class="fas fa-edit"></i>
      <%end%>
    <% end %>
  </div>
</div>