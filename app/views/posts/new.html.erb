<%= render partial: "head" %>
<div class="contents">
  <div class="content__title">
  </div>
  <%= form_with model: @post, class: :form, local: true do |form| %>
    <%= form.text_field :title, placeholder: :本の名前（必須）, class: :form__title %>
    <%= form.text_field :image, placeholder: :著者名, class: :form__author %>
    <%= form.text_field :page, placeholder: :何ページ目？（必須）, class: :form__page %>
    <%= form.text_field :line, placeholder: :何行目？（必須）, class: :form__line %>
    <%= form.text_area :content, placeholder: :コアメッセージや学んだことを共有しよう！（必須）, class: :form__text %>
    <%= form.submit "投稿する", class: :form__btn %>
  <% end %>
</div>