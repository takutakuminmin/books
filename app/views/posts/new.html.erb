<%= render partial: "head" %>
<div class="contents">
  <div class="new-post">
    <% if user_signed_in? %>
      <%= link_to "投稿", new_post_path, class: "new-post__btn" %>
    <% else %>
      <%= link_to "投稿", new_user_session_path, class: "new-post__btn" %>
    <% end %>
  </div>
  <div class="content__title">
    新規記事の作成
  </div>
  <%= form_with model: @post, class: :form, local: true do |form| %>
    <%= form.text_field :title, placeholder: :タイトル, class: :form__title %>
    <%= form.text_field :author, placeholder: :著者名, class: :form__author %>
    <%= form.text_field :page, placeholder: :何ページ目？（半角数字）, class: :form__page %>
    <%= form.text_field :line, placeholder: :何行目？（半角数字）, class: :form__line %>
    <%= form.text_area :content, placeholder: :コアメッセージや学んだことを共有しよう！, class: :form__text %>
    <input type="submit" name="commit" value="投稿する" class="form__btn" data-disable-with="投稿する">
  <% end %>
</div>