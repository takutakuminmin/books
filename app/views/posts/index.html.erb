<%= render partial: "head" %>
<div class="contents">
  <% @posts.each do |post| %>
    <%= render partial: "post", locals: { post: post } %>
  <% end %>
  <div class="new-post">
    <% if user_signed_in? %>
      <%= link_to "", new_post_path, class: "new-post__btn" %>
      <i class="fas fa-edit"></i>
    <% else %>
      <%= link_to "", new_user_session_path, class: "new-post__btn" %>
      <i class="fas fa-edit"></i>
    <% end %>
  </div>
  <%= paginate(@posts) %>
</div>
