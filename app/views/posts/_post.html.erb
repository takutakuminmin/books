<div class="content">
  <div class="content__left">

  </div>
  <div class="content__right">
    <div class="content__right__top">
    <% if user_signed_in? %>
      <%= link_to post.title, post_path(post.id), class: "content__right__top--title" %>
      <%= link_to post.author, post_path(post.id), class: "content__right__top--title" %>
      P
      <%= link_to post.page, post_path(post.id), class: "content__right__top--page" %>
      L
      <%= link_to post.line, post_path(post.id), class: "content__right__top--line" %>
      　　いいね<%= post.liked_users.count %>
    <% else %>
      <%= link_to post.title, new_user_session_path, class: "content__right__top--title" %>
      <%= link_to post.author, new_user_session_path, class: "content__right__top--title" %>
      P
      <%= link_to post.page, new_user_session_path, class: "content__right__top--page" %>
      L
      <%= link_to post.line, new_user_session_path, class: "content__right__top--line" %>
      　　いいね<%= post.liked_users.count %>
    <% end %>
    </div>
    <div class="content__right__bottom">
      <div class="content__right__bottom--userName">
        <%= post.user.nickname %>
      </div>
      <div class="content__right__bottom--date">
        <%= post.created_at %>
      </div>
    </div>
  </div>
</div>